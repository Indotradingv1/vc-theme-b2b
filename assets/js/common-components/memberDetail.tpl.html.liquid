<form accept-charset="UTF8" name="memberDetailForm" novalidate="novalidate">
    <div class="form-group" ng-init="$ctrl.setForm(memberDetailForm)">

        {% comment %} <vc-labeled-input value="$ctrl.member.companyName" name="CompanyName" type="text" placeholder="{{ 'customer.register.company_name' | t }}" form="$ctrl.form" required="$ctrl.requiredField('CompanyName')" ng-show="$ctrl.showField('CompanyName')" disabled="$ctrl.disableField('CompanyName')"></vc-labeled-input> {% endcomment %}
        <div class="form-group"  ng-show="$ctrl.showField('CompanyName')" ng-disabled="$ctrl.disableField('CompanyName')">
            <input class="form-control" ng-model="$ctrl.member.companyName" name="CompanyName" type="text" required vc-flying-placeholder="{{ 'customer.register.company_name' | t }}"/>
            <span class="text-danger" ng-show="!memberDetailForm.CompanyName.$pristine && memberDetailForm.CompanyName.$error.required">{{ 'common.required' | t }}</span>
        </div>
        {% comment %} <vc-labeled-input value="$ctrl.member.email" name="Email" type="email" placeholder="{{ 'customer.register.email' | t }}" form="$ctrl.form" required="$ctrl.requiredField('Email')" ng-show="$ctrl.showField('Email')" disabled="$ctrl.disableField('Email')"></vc-labeled-input> {% endcomment %}
        <div class="form-group"  ng-show="$ctrl.showField('Email')" ng-disabled="$ctrl.disableField('Email')">
            <input class="form-control" ng-model="$ctrl.member.email" name="Email" type="email" required vc-flying-placeholder="{{ 'customer.register.email' | t }}"/>
            <span class="text-danger" ng-show="memberDetailForm.Email.$error.email">{{ 'common.invalid' | t }}</span>
        </div>

        {% comment %} <vc-labeled-input value="$ctrl.member.firstName" name="FirstName" type="text" placeholder="{{ 'customer.register.first_name' | t }}" form="$ctrl.form" required="true"></vc-labeled-input> {% endcomment %}
        <div class="form-group">
            <input class="form-control" ng-model="$ctrl.member.firstName" name="FirstName" type="text" required vc-flying-placeholder="{{ 'customer.register.first_name' | t }}"/>
           <span class="text-danger" ng-show="!memberDetailForm.FirstName.$pristine && memberDetailForm.FirstName.$error.required">{{ 'common.required' | t }}</span>
        </div>

        {% comment %} <vc-labeled-input value="$ctrl.member.lastName" name="LastName" type="text" placeholder="{{ 'customer.register.last_name' | t }}" form="$ctrl.form"></vc-labeled-input> {% endcomment %}
        <div class="form-group">
            <input class="form-control" ng-model="$ctrl.member.lastName" name="LastName" type="text" vc-flying-placeholder="{{ 'customer.register.last_name' | t }}"/>
        </div>

        {% comment %} <vc-labeled-input value="$ctrl.member.salutation" type="number"  name="Budget" placeholder="Available amount" form="$ctrl.form"></vc-labeled-input> {% endcomment %}
        <div class="form-group">
            <input class="form-control" ng-model="$ctrl.member.salutation" name="Budget" type="number" vc-flying-placeholder="Available amount"/>
        </div>

        {% comment %} <vc-labeled-input value="$ctrl.member.userName" name="UserName" type="text" placeholder="{{ 'customer.register.user_name' | t }}" form="$ctrl.form" required="$ctrl.requiredField('UserName')" ng-show="$ctrl.showField('UserName')" disabled="$ctrl.disableField('UserName')"></vc-labeled-input> {% endcomment %}
        <div class="form-group"  ng-show="$ctrl.showField('UserName')" ng-disabled="$ctrl.disableField('UserName')">
            <input class="form-control" ng-model="$ctrl.member.userName" name="UserName" type="text" required vc-flying-placeholder="{{ 'customer.register.user_name' | t }}"/>
            <span class="text-danger" ng-show="!memberDetailForm.UserName.$pristine && memberDetailForm.UserName.$error.required">{{ 'common.required' | t }}</span>
        </div>

        {% comment %} <vc-labeled-input value="$ctrl.member.password" name="Password" type="password" placeholder="{{ 'customer.register.password' | t }}" form="$ctrl.form" required="$ctrl.requiredField('Password')" ng-show="$ctrl.showField('Password')" disabled="$ctrl.disableField('Password')"></vc-labeled-input> {% endcomment %}
        <div class="form-group"  ng-show="$ctrl.showField('Password')" ng-disabled="$ctrl.disableField('Password')">
            <input class="form-control" ng-model="$ctrl.member.password" name="Password" type="password" required vc-flying-placeholder="{{ 'customer.register.password' | t }}"/>
            <span class="text-danger" ng-show="!memberDetailForm.Password.$pristine && memberDetailForm.Password.$error.required">{{ 'common.required' | t }}</span>
        </div>

       
        <div class="form-group">
            <select ng-model="$ctrl.member.role" ng-options="x as x.name for x in $ctrl.availableRoles" name="Roles" required="required" class="form-control" size="1" vc-flying-placeholder="Role">
                <option value=""></option>
            </select>
        </div>
    </div>
</form>
