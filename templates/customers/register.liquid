                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <select ng-model="registration.address.countryCode" ng-options="x.code3 as x.name for x in countries" name="countryCode" required class="form-control" size="1" vc-flying-placeholder="{{ 'checkout.address.country' | t }}">
                        <option value=""></option>
                    </select>
                    <span class="text-danger" ng-show="step2Form.$submitted && step2Form.countryCode.$error.required">{{ 'checkout.country_required_message' | t }}</span>
                </div>
            </div>
            <div class="col-md-6" ng-if="registration.address.country.regions.length">
                <div class="form-group form-select">
                    <select ng-model="registration.address.regionId" ng-options="x.code as x.name for x in registration.address.country.regions" name="region" required class="form-control" size="1" vc-flying-placeholder="{% raw %}{{ 'customer.register.work-region-type' | translate: {type: registration.address.country.regionType} }}{% endraw %}">
                        <option value=""></option>
                    </select>
                    <span class="text-danger" ng-show="step2Form.$submitted && step2Form.region.$error.required" ng-bind="'Please select ' + registration.address.country.regionType"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input class="form-control" ng-model="registration.address.postalCode" name="postalCode" required pattern="\d{4,32}" vc-flying-placeholder="{{ 'checkout.address.zip' | t }}" />
                    <span class="text-danger" ng-show="step2Form.$submitted && step2Form.postalCode.$error.required">{{ 'common.required' | t }}</span>
                    <span class="text-danger" ng-show="step2Form.$submitted && step2Form.postalCode.$error.pattern">{{ 'common.invalid' | t }}</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input class="form-control" ng-model="registration.address.city" name="city" type="text" required vc-flying-placeholder="{{ 'customer.addresses.city' | t }}" />
                    <span class="text-danger" ng-show="step2Form.$submitted && step2Form.city.$error.required">{{ 'common.required' | t }}</span>
                </div>        
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input class="form-control" ng-model="registration.address.line1" name="line1" type="text" required vc-flying-placeholder="{{ 'customer.register.address1' | t }}" />
                    <span class="text-danger" ng-show="step2Form.$submitted && step2Form.line1.$error.required">{{ 'common.required' | t }}</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input class="form-control" ng-model="registration.address.line2" name="line2" type="text" vc-flying-placeholder="{{ 'customer.register.address2' | t }}" />
                </div>
            </div>
        </div>
    </div>
</script>

